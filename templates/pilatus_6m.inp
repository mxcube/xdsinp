! ispyb web service request time: {{"%.2f"|format(metadata.webservice_request_time)}}s
! generated {{metadata.timestamp}}

   JOB= ALL !XYCORR INIT COLSPOT IDXREF DEFPIX XPLAN INTEGRATE CORRECT
   !JOB= DEFPIX XPLAN INTEGRATE CORRECT

!### i would add also a !JOB= CORRECT

   
   DATA_RANGE= {{datacollect.startImageNumber}} {{datacollect.startImageNumber + datacollect.numberOfImages - 1}}
   SPOT_RANGE= 1 20						

!### this is given by _INPUTS["frame_first"], _DP_INPUTS["frame_first"]+3,\ 
!### replaced by something like "first frame", (1/oscillation_range)*4

   {%if datacollect.numberOfImages >= 4 %}
   SPOT_RANGE= {{datacollect.startImageNumber}} {{datacollect.startImageNumber + 3}}
   {%else%}
   SPOT_RANGE= {{datacollect.startImageNumber}} {{datacollect.startImageNumber + datacollect.numberOfImages - 1}}
   {%endif%}
!### this need to be uncommented
!### and be replaced by something like
!### last_image/2 - (1/oscillation_range)*4, last_image/2

   {%if datacollect.numberOfImages >= 4 %}
   BACKGROUND_RANGE= {{datacollect.startImageNumber}} {{datacollect.startImageNumber + 3}}
   {%else%}
   BACKGROUND_RANGE= {{datacollect.startImageNumber}} {{datacollect.startImageNumber + datacollect.numberOfImages - 1}}
   {%endif%}

