   !correction tables to compensate the misorientations of the modules
   X-GEO_CORR= ../x_geo_corr.cbf
   Y-GEO_CORR= ../y_geo_corr.cbf
   
   SECONDS=600
   MINIMUM_NUMBER_OF_PIXELS_IN_A_SPOT= 4

!### can be 3 for pilatus

   !STRONG_PIXEL= 3.0
   
   OSCILLATION_RANGE= {{datacollect.oscillationRange}}
   STARTING_ANGLE= {{datacollect.axisStart}}
   STARTING_FRAME= {{datacollect.startImageNumber}}
   X-RAY_WAVELENGTH=  {{datacollect.wavelength}}
   NAME_TEMPLATE_OF_DATA_FRAMES= {{datacollect.fileTemplate}} !CBF
   
   !STARTING_ANGLES_OF_SPINDLE_ROTATION= 0 180 10 
   !TOTAL_SPINDLE_ROTATION_RANGES= 60 180 10 

!### as we are using default we can remove this, what do you think?

   
   DETECTOR_DISTANCE= {{detector.detectorDistance}}
   DETECTOR= {{detector.detectorType}}
   !MINIMUM_VALID_PIXEL_VALUE= %d ! check if we have that on ispyb
   MINIMUM_VALID_PIXEL_VALUE= 1.0 ! check if we have that on ispyb
   OVERLOAD= 1048500

!### overload is really not necessary, is more for user education


   SENSOR_THICKNESS=0.32
   ORGX= {{datacollect.xbeam}}   ORGY= {{datacollect.ybeam}}
   ! check in ispyb
   !NX=  %d   NY=  %d
   QX= {{"%.4f"|format(detector.detectorPixelSizeHorizontal / 1000)}}  QY= {{"%.4f"|format(detector.detectorPixelSizeVertical / 1000)}}
   VALUE_RANGE_FOR_TRUSTED_DETECTOR_PIXELS= 7000 30000
   
   DIRECTION_OF_DETECTOR_X-AXIS= 1.0 0.0 0.0
   DIRECTION_OF_DETECTOR_Y-AXIS= 0.0 1.0 0.0
   ROTATION_AXIS= 1.0 0.0 0.0
   INCIDENT_BEAM_DIRECTION= 0.0 0.0 1.0
   FRACTION_OF_POLARIZATION= {{"%.2" | format(blsetup.polarisation)}}
   POLARIZATION_PLANE_NORMAL= 0.0 1.0 0.0
   !== Default value recommended
   !AIR= %.8f
   
   SPACE_GROUP_NUMBER= 0
   UNIT_CELL_CONSTANTS= 0 0 0 0 0 0
   INCLUDE_RESOLUTION_RANGE= 50.0 0.0
   !RESOLUTION_SHELLS= 15.0 8.0 4.0 2.8 2.4
   !FRIEDEL\'S_LAW= FALSE !default is TRUE
   !STRICT_ABSORPTION_CORRECTION=TRUE
    
   REFINE(INTEGRATE)= BEAM ORIENTATION CELL
   !== Default value recommended
   !DELPHI= %.3f
   MAXIMUM_NUMBER_OF_PROCESSORS= 16
   !MAXIMUM_NUMBER_OF_JOBS= 16

